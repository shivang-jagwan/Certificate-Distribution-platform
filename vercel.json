{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "includeFiles": "app/** data/** templates/**"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm ci --include=dev",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "^/verify$", "dest": "/api/index.py" },
    { "src": "^/certificate$", "dest": "/api/index.py" },
    { "src": "^/health$", "dest": "/api/index.py" },
    { "src": "^/generate-all$", "dest": "/api/index.py" },

    { "src": "^/api/(.*)$", "dest": "/api/index.py" },

    { "src": "^/$", "dest": "/index.html" },

    { "handle": "filesystem" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
